generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  fullName  String?
  phone     String?
  address   String?
  role      String   @default("customer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id          Int             @id @default(autoincrement())
  slug        String          @unique
  name        String
  description String
  basePrice   Decimal         @db.Decimal(10, 2)
  imageUrl    String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  orderItems  OrderItem[]
  images      ProductImage[]
  options     ProductOption[]
}

model ProductImage {
  id         Int     @id @default(autoincrement())
  url        String
  isFeatured Boolean @default(false)
  productId  Int
  product    Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model ProductOption {
  id        Int           @id @default(autoincrement())
  name      String
  type      String
  productId Int
  values    OptionValue[]
  product   Product       @relation(fields: [productId], references: [id])
}

model OptionValue {
  id            Int           @id @default(autoincrement())
  name          String
  priceModifier Decimal       @default(0) @db.Decimal(10, 2)
  optionId      Int
  option        ProductOption @relation(fields: [optionId], references: [id])
}

model Order {
  id              Int         @id @default(autoincrement())
  userId          Int?
  status          String      @default("received")
  totalAmount     Decimal     @db.Decimal(10, 2)
  shippingAddress Json?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  user            User?       @relation(fields: [userId], references: [id])
  items           OrderItem[]
}

model OrderItem {
  id             Int     @id @default(autoincrement())
  orderId        Int
  productId      Int
  quantity       Int
  configurations Json    @default("{}")
  fileUrl        String?
  subtotal       Decimal @db.Decimal(10, 2)
  files          Json    @default("[]")
  order          Order   @relation(fields: [orderId], references: [id])
  product        Product @relation(fields: [productId], references: [id])
}

model Service {
  id              Int            @id @default(autoincrement())
  slug            String         @unique
  title           String
  description     String
  longDescription String
  features        String[]
  imageUrl        String?
  icon            String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  category        String         @default("General")
  startingPrice   Decimal?       @db.Decimal(10, 2)
  images          ServiceImage[]
}

model ServiceImage {
  id         Int     @id @default(autoincrement())
  url        String
  isFeatured Boolean @default(false)
  serviceId  Int
  service    Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model Page {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  content   Json     @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NavigationItem {
  id          Int              @id @default(autoincrement())
  label       String
  url         String?
  type        String
  parentId    Int?
  position    Int              @default(0)
  icon        String?
  imageUrl    String?
  description String?
  badge       String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  scope       String           @default("header")
  parent      NavigationItem?  @relation("NavigationHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    NavigationItem[] @relation("NavigationHierarchy")
}

model GlobalSetting {
  key         String   @id
  value       String
  description String?
  updatedAt   DateTime @updatedAt
}
